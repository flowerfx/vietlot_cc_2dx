<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="dialogColor">#55000000</color>

    <style name="KeyboardTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowSoftInputMode">stateVisible|adjustUnspecified</item>
    </style>

    <style name="WebViewTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/dialogColor</item>
    </style>

    <style name="LogoTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:padding">0dp</item>
    </style>

</resources>